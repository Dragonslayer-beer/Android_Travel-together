<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backlog3"
    android:orientation="vertical"
    android:paddingLeft="30dp"
    android:paddingTop="20dp"
    android:paddingRight="30dp"
    android:paddingBottom="16dp"
    tools:context=".MainActivity">
    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_gravity="right"
        android:layout_weight="0.5"
        android:src="@drawable/book" />
    <TextView
        android:layout_width="200dp"
        android:layout_height="1dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:background="#36FFFFFF" />

    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_gravity="center"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_weight="2"
        android:orientation="horizontal"
        android:src="@drawable/travel1140" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_weight="3"
        android:background="@drawable/blackeng"
        android:orientation="vertical">

        <EditText
            android:id="@+id/emails"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="20dp"
            android:inputType="text"
            android:background="@drawable/ss"
            android:drawableLeft="@drawable/user"
            android:layout_weight="1"
            android:fontFamily="@font/fontlaos"
            android:hint="|    ອີເມວ"
            android:textColorHint="#D1D1D1" />

        <EditText
            android:id="@+id/PasswordSign"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:inputType="text"
            android:layout_marginTop="20dp"
            android:background="@drawable/ss"
            android:drawableLeft="@drawable/password"
            android:fontFamily="@font/fontlaos"
            android:hint="|   ລະຫັດຜ່ານ"
            android:layout_weight="1"
            android:password="true"
            android:textColorHint="#D1D1D1" />

        <Button
            android:id="@+id/brnLogin"
            android:layout_width="170dp"
            android:layout_height="45dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:layout_weight="1"
            android:fontFamily="@font/fontlaos"
            android:background="@drawable/blackbtn"
            android:filterTouchesWhenObscured="false"
            android:fitsSystemWindows="false"
            android:text="ເຂົ້າສູ່ລະບົບ"
            android:textColor="#FFFFFF" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal">
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:text="ລືມລະຫັດຜ່ານ?"
                android:textColor="#ffff"
                android:fontFamily="@font/fontlaos"
                android:background="#00FFFFFF"
                android:textSize="14sp"
                android:layout_weight="1"
                android:layout_marginRight="20dp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/Register"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_weight="1"
                android:text="ສະໝັກສະມາຊິກໃໝ່?"
                android:layout_marginLeft="20dp"
                android:background="#00FFFFFF"
                android:fontFamily="@font/fontlaos"
                android:textColor="#ffff"
                android:textSize="14sp"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/btnFacebook"
        android:layout_width="274dp"
        android:layout_height="30dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="5dp"
        android:layout_weight="0.5"
        android:background="@drawable/faceboollogin"
        android:drawableLeft="@drawable/facebook"
        android:text="ເຂົ້າສູ່ລະບົບຜ່ານ Facebook"
        android:fontFamily="@font/fontlaos"
        android:textColor="#FFFFFF" />

    <Button
        android:id="@+id/btnGoogle"
        android:layout_width="274dp"
        android:layout_height="30dp"
        android:layout_gravity="center"
        android:layout_marginTop="5dp"
        android:layout_weight="0.5"
        android:background="@drawable/googlelogin"
        android:drawableLeft="@drawable/ui"
        android:fontFamily="@font/fontlaos"
        android:text="ເຂົ້າສູ່ລະບົບຜ່ານ Google"
        android:textColor="#FFFFFF" />
</LinearLayout>